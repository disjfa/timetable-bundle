{% extends "admin.html.twig" %}

{% block body %}
    <div class="container py-4">
        <h1>Timetables</h1>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Places</th>
                    <th>Dates</th>
                    <th>Users</th>
                </tr>
                </thead>
                <tbody>
                {% for timetable in timetables %}
                    <tr>
                        <td>
                            <a href="{{ path('disjfa_timetable_timetable_show', {'timetable': timetable.id}) }}">
                                {{ timetable.title }}
                            </a>
                        </td>
                        <td>
                            {% for place in timetable.places %}
                                {{ place.title }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </td>
                        <td>
                            {% for date in timetable.dates %}
                                {{ date.title }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </td>
                        <td>
                            {% for user in timetable.users %}
                                {{ user.email }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
